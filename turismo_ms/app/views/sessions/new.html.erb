<h1>Login</h1>

<%= form_with url: login_path, local: true do |form| %>
  <div>
    <%= form.label :email, "Email:" %><br>
    <%= form.email_field :email, autofocus: true, required: true %>
  </div>

  <div>
    <%= form.label :password, "Senha:" %><br>
    <%= form.password_field :password, required: true %>
  </div>

  <div>
    <%= form.submit "Entrar" %>
  </div>
<% end %>
