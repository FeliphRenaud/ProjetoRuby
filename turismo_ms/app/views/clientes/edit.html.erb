<% content_for :extra_stylesheets do %>
  <%= stylesheet_link_tag 'registration', media: 'all' %>
<% end %>


<div class="registration-container">
  <div class="registration-box">
    <div class="registration-content">
      <h1>Editar Perfil</h1>

      <% if flash[:alert] %>
        <div class="alert alert-danger">
          <%= flash[:alert] %>
        </div>
      <% elsif flash[:notice] %>
        <div class="alert alert-success">
          <%= flash[:notice] %>
        </div>
      <% end %>

      <%= form_with model: @cliente, local: true do |form| %>
        <div class="form-group">
          <%= form.label :nome, "Nome:" %><br>
          <%= form.text_field :nome, class: "form-control", required: true %>
        </div>

        <div class="form-group">
          <%= form.label :email, "Email:" %><br>
          <%= form.email_field :email, class: "form-control", required: true %>
        </div>

        <!-- para alteração a senha -->
        <div class="form-group">
          <%= form.label :password, "Nova Senha (deixe em branco para manter a atual):" %><br>
          <%= form.password_field :password, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :password_confirmation, "Confirme a nova senha:" %><br>
          <%= form.password_field :password_confirmation, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.submit "Atualizar Perfil", class: "btn btn-primary" %>
        </div>
      <% end %>

      <p class="register-link">
        <%= link_to "Voltar", login_path %>
      </p>
    </div>
  </div>
</div>
